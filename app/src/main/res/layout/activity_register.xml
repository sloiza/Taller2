<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="tp.taller2.udrive.RegisterActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_height="70dp">

        <Button
            android:id="@+id/buttonLoadPicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="90dp"
            android:layout_weight="1"
            android:onClick="loadPicture"
            android:background="@drawable/borderbutton"
            android:text="Load picture"
            android:textSize="12sp"
            android:textColor="#0D7694"
            android:layout_gravity="center_vertical"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imgView"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText android:id="@+id/username_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:theme="@style/EditTextTheme"
                android:hint="@string/username_message" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText android:id="@+id/surname_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:theme="@style/EditTextTheme"
                android:hint="@string/surname_message" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_newEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText android:id="@+id/newEmail_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_message"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:theme="@style/EditTextTheme"
                android:inputType="textEmailAddress"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_newPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText android:id="@+id/newPassword_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType= "textPassword"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:theme="@style/EditTextTheme"
                android:hint="@string/password_message" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText android:id="@+id/place_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:theme="@style/EditTextTheme"
                android:hint="@string/place_message" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/register_error"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#e30000"
        android:textStyle="bold" />
    <Button
        android:layout_width="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:onClick="registerMessage"
        android:text="@string/button_register"
        android:background="@drawable/radioussolidbutton"
        android:textColor="#ffffff"/>
</LinearLayout>
