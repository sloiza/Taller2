<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tp.taller2.udrive.ProfileActivity">
        <Button
            android:id="@+id/buttonChangePicture"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:onClick="changePicture"
            android:background="@drawable/borderbutton"
            android:text="Change picture"
            android:textSize="10sp"
            android:textColor="#0D7694"
            android:layout_gravity="center_vertical"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="30dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/profile_pic"
            android:layout_marginLeft="220dp"
            android:layout_marginRight="30dp"
            android:id="@+id/imgView"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="120dp">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <EditText android:id="@+id/username_text"
                android:layout_marginEnd="30dp"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:hint="@string/username_message"
                android:theme="@style/EditTextTheme" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="180dp"
        android:id="@+id/linearLayout2">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <EditText android:id="@+id/surname_text"
                android:layout_marginEnd="30dp"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="@string/surname_message"
                android:fontFamily="sans-serif"
                android:theme="@style/EditTextTheme"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="240dp">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <EditText android:id="@+id/email_text"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="@string/email_message"
                android:fontFamily="sans-serif"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="300dp">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <EditText android:id="@+id/password_text"
                android:layout_marginEnd="30dp"
                android:layout_width="320dp"
                android:inputType= "textPassword"
                android:hint="@string/password_message"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:theme="@style/EditTextTheme"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="360dp"
        android:id="@+id/linearLayout">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <EditText android:id="@+id/place_text"
                android:layout_marginEnd="30dp"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:hint="@string/place_message"
                android:textSize="20sp"
                android:theme="@style/EditTextTheme"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <Button
        android:layout_width="100dp"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="30dp"
        android:layout_height="50dp"
        android:onClick="saveProfile"
        android:layout_marginTop="430dp"
        android:text="Save"
        android:background="@drawable/radioussolidbutton"
        android:textColor="#ffffff"/>

</RelativeLayout>

